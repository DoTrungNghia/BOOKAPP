<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BookApp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="75dp"
                android:textColor="@color/dot_color"
                ></TextView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="140dp"
                android:src="@drawable/book"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập để đọc miễn phí!"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="10dp"></TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:padding="5dp"
            android:theme="@style/Myeditext">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:hint="Tài khoản"
                android:singleLine="true"
                android:id="@+id/username"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            app:passwordToggleEnabled="true"
            android:theme="@style/Myeditext"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:textAllCaps="false"
                android:id="@+id/btndn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng Nhập"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:textColor="@color/white"></Button>
            <Button
                android:layout_marginLeft="50dp"
                android:textAllCaps="false"
                android:id="@+id/btnhuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/roundedbutton"></Button>
        </LinearLayout>

        <TextView
            android:id="@+id/textregister1"
            android:onClick="txtregister1"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn không có tài khoản? Hãy đăng ký"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/textcolor"></TextView>
    </LinearLayout>

</ScrollView>