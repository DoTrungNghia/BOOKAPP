<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_dialog"
    android:layout_margin="20dp"
    android:padding="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Đổi mật khẩu"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>
    <TextView
        android:id="@+id/texttk"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="0dp"
        android:padding="5dp"
        android:text="Đổi mật khẩu"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Đổi mật khẩu thường xuyên giúp bạn bảo mật thông tin tốt hơn!"
        android:textColor="@color/black"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Myeditext"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtmkcu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu cũ"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Myeditext"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtmkmoi"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Myeditext"
        app:passwordToggleEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtnhaplaimk"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:inputType="textPassword"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/huy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HỦY"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:textColor="#00BCD4"
            ></Button>
        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:text="ĐỒNG Ý"
            android:background="@color/white"
            android:textColor="#00BCD4"
            ></Button>
    </LinearLayout>
</LinearLayout>